<body>
<div class="container">
    <h2>Kode Redeem Manager</h2>
    <select id="typeSelect">
        <option value="7D">7 Day</option>
        <option value="30D">30 Day</option>
    </select>
    <input type="text" id="codeInput" placeholder="Masukkan kode redeem (contoh: S96P-P5FX-5NWV)">
    <button onclick="addCode()">Tambah Kode</button>
    
    <h3>Daftar Kode Redeem:</h3>
    <div id="codeList"></div>

    <h3>Output:</h3>
    <div id="output"></div>
</div>

<script>
    let codes = JSON.parse(localStorage.getItem('codes')) || [];
    const codeListDiv = document.getElementById('codeList');
    const outputDiv = document.getElementById('output');

    function displayCodes() {
        codeListDiv.innerHTML = '';
        codes.forEach((item, index) => {
            const div = document.createElement('div');
            div.className = 'codeItem';
            div.textContent = item.type + ': ' + item.code;
            div.onclick = () => redeemCode(index);
            codeListDiv.appendChild(div);
        });
    }

    function addCode() {
        const type = document.getElementById('typeSelect').value;
        const code = document.getElementById('codeInput').value.trim();
        if(code) {
            codes.push({type: type, code: code});
            localStorage.setItem('codes', JSON.stringify(codes));
            document.getElementById('codeInput').value = '';
            displayCodes();
        }
    }

    function redeemCode(index) {
        const item = codes[index];
        if(confirm("Ambil kode ini? Kode akan hilang setelah diambil.")) {
            // tampilkan output sesuai template
            let duration = item.type === "7D" ? "7 days üöÄ" : "30 days üöÄ";
            let price = item.type === "7D" ? "Rp 20.500" : "Rp 61.000";
            outputDiv.textContent = `üéÅ Your Order Has Been Processed!
Product: VIP - Redeem Code ${item.type} (Redfinger)
Quantity: 1x
Total Price: ${price}

üéüÔ∏è Redeem Code:
üëâ ${item.code}

How to Redeem:
1Ô∏è‚É£ Open the Redfinger app
2Ô∏è‚É£ Log in to your account
3Ô∏è‚É£ Go to Profile ‚Üí Prepaid Redemption Code
4Ô∏è‚É£ Enter the code above
5Ô∏è‚É£ VIP will be activated automatically for ${duration}

‚ö†Ô∏è Each code can only be used for one account
üí¨ No refund unless it‚Äôs our mistake.

‚ú® Thank you for ordering from Arriab Store!`;

            codes.splice(index, 1);
            localStorage.setItem('codes', JSON.stringify(codes));
            displayCodes();
        }
    }

    displayCodes();
</script>
